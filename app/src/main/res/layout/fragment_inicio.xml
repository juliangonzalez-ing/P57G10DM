<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#073B4C"
    tools:context=".InicioFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="39dp"
        android:breakStrategy="high_quality"
        android:bufferType="spannable"
        android:fontFamily="cursive"
        android:gravity="center"
        android:layerType="none"
        android:text="¡Bienvenido!"
        android:textAllCaps="false"
        android:textColor="@color/design_default_color_background"
        android:textColorLink="#118AB2"
        android:textSize="75dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:onClick="setOnClickListener"
            android:src="@drawable/imagenlogo"
            tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/arranquemos_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="#118AB2"
            android:gravity="center"
            android:text="INICIAR SESIÓN"
            android:textColorHighlight="#FF5722"
            android:textColorLink="#FF5722"
            android:textSize="24dp"/>

        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="130dp"
            android:backgroundTint="#118AB2"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="REGISTRARSE"
            android:textColorHighlight="#FF5722"
            android:textColorLink="#FF5722"
            android:textSize="20dp"
            android:onClick="onClick"
            />

    </LinearLayout>


</FrameLayout>